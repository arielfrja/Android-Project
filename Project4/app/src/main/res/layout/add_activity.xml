<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/add_activity"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:rowCount="8"
            tools:context=".Operator.controller.AddActivity">

    <TextView
        android:text="Select Activity type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:textSize="18sp"/>

    <Spinner
        android:id="@+id/Sdescription"
        android:layout_column="1"
        android:layout_row="0"
        android:hint="short description"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/CselectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"
        android:textSize="18sp"
        android:text="select country from list"
        android:layout_columnSpan="2"/>

    <Spinner
        android:id="@+id/countries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_marginStart="27dp"/>

    <EditText
        android:id="@+id/Cost"
        android:layout_width="167dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"
        android:ems="10"
        android:hint="cost"
        android:inputType="numberDecimal"/>

    <TextView
        android:id="@+id/BselectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="3"
        android:textSize="18sp"
        android:text="select operator from list"
        android:layout_columnSpan="2"/>

    <Spinner
        android:id="@+id/business"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_marginStart="27dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_marginStart="110dp">

        <Button
            android:text="Set starting date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StartDatePicker"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/StartDate"
            android:layout_row="4"
            android:layout_column="0"
            android:textSize="18sp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_column="0"
        android:layout_row="5"
        android:layout_marginStart="110dp">

        <Button
            android:text="Set end date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EndDatePicker"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EndDate"
            android:layout_row="5"
            android:layout_column="0"
            android:textSize="18sp"
            android:layout_weight="1" />
    </LinearLayout>


    <Button
        android:id="@+id/AddThisActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add this activity"
        android:layout_row="7"
        android:layout_column="0"/>

    <EditText
        android:id="@+id/Ldiscription"
        android:layout_width="313dp"
        android:layout_height="189dp"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="6"
        android:ems="10"
        android:gravity="top"
        android:hint="write here the long description"
        android:inputType="textPersonName"/>

</GridLayout>
